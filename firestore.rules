rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isAuthenticated() && request.auth.token.role == role;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isManager() {
      return hasRole('manager');
    }

    function isCashier() {
      return hasRole('cashier');
    }

    function isCook() {
      return hasRole('cook');
    }

    function isClient() {
      return hasRole('client');
    }

    function isStaff() {
      return isManager() || isCashier() || isCook();
    }

    // Multi-tenant helper functions
    function isSuperAdmin() {
      return isAuthenticated() && request.auth.token.isSuperAdmin == true;
    }

    function getUserRestaurantId() {
      return request.auth.token.restaurantId;
    }

    // NEW: Get user's restaurant IDs array for multi-restaurant support
    function getUserRestaurantIds() {
      // Return restaurantIds array if it exists, otherwise fall back to single restaurantId
      return request.auth.token.restaurantIds != null ?
             request.auth.token.restaurantIds :
             (request.auth.token.restaurantId != null ? [request.auth.token.restaurantId] : []);
    }

    // NEW: Check if user has access to a specific restaurant
    function hasAccessToRestaurant(restaurantId) {
      return isAuthenticated() &&
             getUserRestaurantIds().hasAny([restaurantId]);
    }

    // Legacy: Check if user belongs to same restaurant (for backward compatibility)
    function belongsToSameRestaurant(restaurantId) {
      return hasAccessToRestaurant(restaurantId);
    }

    function isValidRestaurantId(restaurantId) {
      return restaurantId != null && restaurantId is string && restaurantId.size() > 0;
    }

    // RESTAURANTS COLLECTION
    // Super admins can manage all restaurants
    // Managers can read their own restaurant
    // PUBLIC READ for guest self-service (no auth required)
    match /restaurants/{restaurantId} {
      allow read: if true; // Public read for guest orders - guests need to query by shortCode
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin() ||
                       (isManager() && belongsToSameRestaurant(restaurantId) &&
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['branding', 'updatedAt'])); // Managers can only update branding
      allow delete: if isSuperAdmin();

      // SETTINGS SUBCOLLECTION
      // Settings for each restaurant (ticket, printer, kitchen display, notifications)
      // Managers have full access, Cashiers can read/update ticket settings only
      match /settings/{settingsId} {
        // Staff in same restaurant can read, super admins can read all
        allow read: if isSuperAdmin() ||
                       (isStaff() && belongsToSameRestaurant(restaurantId));

        // Managers can create/update all settings, Cashiers can only update ticket settings
        allow create: if isSuperAdmin() ||
                         (isManager() && belongsToSameRestaurant(restaurantId));

        allow update: if isSuperAdmin() ||
                         (isManager() && belongsToSameRestaurant(restaurantId)) ||
                         (isCashier() && belongsToSameRestaurant(restaurantId) &&
                          request.resource.data.diff(resource.data).affectedKeys()
                            .hasOnly(['ticket', 'updatedAt', 'updatedBy']));

        // Only managers and super admins can delete
        allow delete: if isSuperAdmin() ||
                         (isManager() && belongsToSameRestaurant(restaurantId));
      }
    }

    // SUPER_ADMINS COLLECTION
    // Platform administrators - separate from restaurant users
    // Only super admins can read/write this collection
    match /super_admins/{adminId} {
      allow read: if isSuperAdmin();
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    // AUDIT_LOGS COLLECTION
    // Security audit trail for super admin actions
    // Only super admins can read, system can write
    match /audit_logs/{logId} {
      allow read: if isSuperAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // USERS COLLECTION
    // Multi-tenant: Users isolated by restaurantId(s)
    // Support for multi-restaurant access via restaurantIds array
    // Only managers within the same restaurant can manage users
    // Users can update their own FCM token and restaurantIds
    // SECURITY: Super admins should NOT be in this collection (use super_admins instead)
    match /users/{userId} {
      // Users can read themselves or others in their restaurant(s), super admins can read all
      allow read: if isAuthenticated() &&
                     (isSuperAdmin() ||
                      isOwner(userId) ||
                      hasAccessToRestaurant(resource.data.restaurantId));

      // Managers can create users in their restaurant, super admins can create in any
      allow create: if (isManager() &&
                        isValidRestaurantId(request.resource.data.restaurantId) &&
                        hasAccessToRestaurant(request.resource.data.restaurantId)) ||
                       isSuperAdmin();

      // Allow managers to update users in their restaurant
      // Allow users to update their FCM token, restaurantIds, and activeRestaurantId
      // Super admins can update anyone
      allow update: if isSuperAdmin() ||
                       (isManager() && hasAccessToRestaurant(resource.data.restaurantId)) ||
                       (isOwner(userId) &&
                        request.resource.data.diff(resource.data).affectedKeys()
                          .hasOnly(['fcmToken', 'fcmTokenUpdatedAt', 'restaurantIds', 'activeRestaurantId', 'updatedAt']));

      // Only managers in same restaurant or super admins can delete
      allow delete: if isSuperAdmin() ||
                       (isManager() && hasAccessToRestaurant(resource.data.restaurantId));
    }

    // MENU COLLECTION (used by web app)
    // Multi-tenant: Menu items isolated by restaurantId
    // Public read within restaurant, only managers can write
    match /menu/{itemId} {
      allow read: if true; // Public menu for all visitors
      allow create: if isManager() &&
                       isValidRestaurantId(request.resource.data.restaurantId) &&
                       belongsToSameRestaurant(request.resource.data.restaurantId);
      allow update, delete: if isManager() &&
                               belongsToSameRestaurant(resource.data.restaurantId);
    }

    // MENU_ITEMS COLLECTION (legacy/alternative)
    // Multi-tenant: Menu items isolated by restaurantId
    // Public read within restaurant, only managers can write
    match /menu_items/{itemId} {
      allow read: if true; // Public menu for all visitors
      allow create: if isManager() &&
                       isValidRestaurantId(request.resource.data.restaurantId) &&
                       belongsToSameRestaurant(request.resource.data.restaurantId);
      allow update, delete: if isManager() &&
                               belongsToSameRestaurant(resource.data.restaurantId);
    }

    // ORDERS COLLECTION
    // Multi-tenant: Orders isolated by restaurantId
    // Supports staff orders, client orders, and GUEST self-service orders (NO AUTH)
    match /orders/{orderId} {
      // Staff in same restaurant and order owner can read
      // Guest orders can be read by anyone (secret validated in app, not rules)
      allow read: if isSuperAdmin() ||
                     (isStaff() && belongsToSameRestaurant(resource.data.restaurantId)) ||
                     (isClient() && resource.data.userId == request.auth.uid) ||
                     resource.data.isGuestOrder == true;

      // Staff can create orders in their restaurant
      // Clients can create orders with their restaurantId
      // UNAUTHENTICATED guests can create orders (no userId required)
      allow create: if (isStaff() &&
                        isValidRestaurantId(request.resource.data.restaurantId) &&
                        belongsToSameRestaurant(request.resource.data.restaurantId)) ||
                       (isClient() &&
                        request.resource.data.userId == request.auth.uid &&
                        isValidRestaurantId(request.resource.data.restaurantId) &&
                        belongsToSameRestaurant(request.resource.data.restaurantId)) ||
                       (!isAuthenticated() &&
                        request.resource.data.isGuestOrder == true &&
                        request.resource.data.guestName != null &&
                        request.resource.data.guestName.size() > 0 &&
                        request.resource.data.trackingSecret != null &&
                        request.resource.data.trackingSecret.size() > 20 &&
                        request.resource.data.status == 'awaiting_approval' &&
                        get(/databases/$(database)/documents/restaurants/$(request.resource.data.restaurantId)).data.acceptingOrders == true);

      // Staff in same restaurant can update orders (status changes, assignments)
      // Clients can cancel their own orders if status is awaiting_approval or pending
      allow update: if isSuperAdmin() ||
                       (isStaff() && belongsToSameRestaurant(resource.data.restaurantId)) ||
                       (isClient() &&
                        resource.data.userId == request.auth.uid &&
                        belongsToSameRestaurant(resource.data.restaurantId) &&
                        (resource.data.status == 'awaiting_approval' || resource.data.status == 'pending') &&
                        request.resource.data.status == 'cancelled' &&
                        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'rejectionReason', 'updatedAt']) ||
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'updatedAt'])));

      // Only managers in same restaurant can delete orders
      allow delete: if isSuperAdmin() ||
                       (isManager() && belongsToSameRestaurant(resource.data.restaurantId));
    }

    // CART COLLECTION (for offline sync)
    // Multi-tenant: Carts isolated by restaurantId
    match /carts/{userId} {
      allow read, write: if isOwner(userId) &&
                           (isSuperAdmin() ||
                            belongsToSameRestaurant(request.resource.data.restaurantId));
    }

    // NOTIFICATIONS COLLECTION
    // Multi-tenant: Notifications isolated by restaurantId
    match /notifications/{notifId} {
      allow read: if isSuperAdmin() ||
                     (isOwner(resource.data.userId) &&
                      belongsToSameRestaurant(resource.data.restaurantId));
      allow write: if isSuperAdmin() ||
                      (isOwner(request.resource.data.userId) &&
                       belongsToSameRestaurant(request.resource.data.restaurantId));
      allow delete: if isSuperAdmin() ||
                       (isOwner(resource.data.userId) &&
                        belongsToSameRestaurant(resource.data.restaurantId));
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
